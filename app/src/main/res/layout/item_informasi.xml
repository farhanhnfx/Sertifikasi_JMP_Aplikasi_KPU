<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengumuman Lorem Ipsum"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="8dp"
        />

    <TextView
        android:id="@+id/txt_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_alignStart="@id/txt_title"
        android:text="31 Desember 2024"
        />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/img_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/txt_tgl"
        android:layout_alignParentStart="true"
        android:src="@drawable/kpu_info"
        android:layout_marginTop="8dp"
        />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_main"
        android:layout_marginTop="12dp"
        />

</RelativeLayout>